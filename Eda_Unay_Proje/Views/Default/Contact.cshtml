                        <form action="https://sendmail.w3layouts.com/submitForm" method="post" class="signin-form">
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" name="w3lName" id="w3lName" placeholder="İsminiz Giriniz*" class="contact-input" />
                                </div>
                                <div class="form-group">
                                    <input type="email" name="w3lSender" id="w3lSender" placeholder="Mailinizi Giriniz*" class="contact-input" required="" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="w3lSubect" id="w3lSubect" placeholder="Konu*" class="contact-input" />
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea name="w3lMessage" id="w3lMessage" placeholder="Mesajınızı Yazınız*" required=""></textarea>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-style btn-primary">Mesajı Gönder</button>
                            </div>
                        </form>
                    </div>

